<%- model_class = Product -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nome_produto) %></th>
      <th><%= model_class.human_attribute_name(:preco) %></th>
      <th><%= model_class.human_attribute_name(:qtd_produtos) %></th>
      <th><%= model_class.human_attribute_name(:tempo_entrega) %></th>
      <th><%= model_class.human_attribute_name(:validade) %></th>
      <th><%= model_class.human_attribute_name(:min_qtd_entrega) %></th>
      <th><%= model_class.human_attribute_name(:descricao_produto) %></th>
      <th><%= model_class.human_attribute_name(:composicao_produto) %></th>
      <th><%= model_class.human_attribute_name(:categoria_produto) %></th>
      <th><%= model_class.human_attribute_name(:user_id) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= link_to product.id, product_path(product) %></td>
        <td><%= product.nome_produto %></td>
        <td><%= product.preco %></td>
        <td><%= product.qtd_produtos %></td>
        <td><%= product.tempo_entrega %></td>
        <td><%= product.validade %></td>
        <td><%= product.min_qtd_entrega %></td>
        <td><%= product.descricao_produto %></td>
        <td><%= product.composicao_produto %></td>
        <td><%= product.categoria_produto %></td>
        <td><%= product.user_id %></td>
        <td><%=l product.created_at %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_product_path(product), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      product_path(product),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_product_path,
            :class => 'btn btn-primary' %>
